{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "es2021"
    ],
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true
  }
}
